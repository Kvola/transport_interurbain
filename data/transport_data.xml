            <field name="value">True</field>
        </record>

        <record id="transport_config_booking_reminder" model="ir.config_parameter">
            <field name="key">transport.booking_reminder_hours</field>
            <field name="value">2</field>
        </record>

        <record id="transport_config_min_booking_before" model="ir.config_parameter">
            <field name="key">transport.min_booking_hours_before</field>
