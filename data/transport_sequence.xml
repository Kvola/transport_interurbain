<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Séquence pour les itinéraires -->
        <record id="seq_transport_route" model="ir.sequence">
            <field name="name">Transport - Itinéraire</field>
            <field name="code">transport.route</field>
            <field name="prefix">ITN/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Séquence pour les compagnies -->
        <record id="seq_transport_company" model="ir.sequence">
            <field name="name">Transport - Compagnie</field>
            <field name="code">transport.company</field>
            <field name="prefix">CIE/</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Séquence pour les bus -->
        <record id="seq_transport_bus" model="ir.sequence">
            <field name="name">Transport - Bus</field>
            <field name="code">transport.bus</field>
            <field name="prefix">BUS/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Séquence pour les voyages -->
        <record id="seq_transport_trip" model="ir.sequence">
            <field name="name">Transport - Voyage</field>
            <field name="code">transport.trip</field>
            <field name="prefix">VOY/%(year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Séquence pour les programmes de voyages -->
        <record id="seq_transport_trip_schedule" model="ir.sequence">
            <field name="name">Transport - Programme de voyage</field>
            <field name="code">transport.trip.schedule</field>
            <field name="prefix">PRG/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Séquence pour les réservations -->
        <record id="seq_transport_booking" model="ir.sequence">
            <field name="name">Transport - Réservation</field>
            <field name="code">transport.booking</field>
            <field name="prefix">TKT/%(year)s/</field>
            <field name="padding">6</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Séquence pour les paiements -->
        <record id="seq_transport_payment" model="ir.sequence">
            <field name="name">Transport - Paiement</field>
            <field name="code">transport.payment</field>
            <field name="prefix">PAY/%(year)s/</field>
            <field name="padding">6</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>
