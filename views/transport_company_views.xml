<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================ -->
    <!-- VUES POUR LES COMPAGNIES -->
    <!-- ============================================ -->

    <!-- Vue Tree -->
    <record id="transport_company_view_tree" model="ir.ui.view">
        <field name="name">transport.company.view.tree</field>
        <field name="model">transport.company</field>
        <field name="arch" type="xml">
            <tree string="Compagnies" decoration-muted="state == 'suspended'" decoration-info="state == 'pending'">
                <field name="code"/>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="city_id"/>
                <field name="bus_count"/>
                <field name="active_trip_count"/>
                <field name="rating" widget="priority"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'active'"
                       decoration-info="state == 'pending'"
                       decoration-danger="state == 'suspended'"/>
            </tree>
        </field>
    </record>

    <!-- Vue Form -->
    <record id="transport_company_view_form" model="ir.ui.view">
        <field name="name">transport.company.view.form</field>
        <field name="model">transport.company</field>
        <field name="arch" type="xml">
            <form string="Compagnie de transport">
                <header>
                    <button name="action_activate" type="object" string="Activer"
                            class="btn-primary" invisible="state != 'pending'"
                            groups="transport_interurbain.group_transport_admin"/>
                    <button name="action_suspend" type="object" string="Suspendre"
                            class="btn-warning" invisible="state != 'active'"
                            groups="transport_interurbain.group_transport_admin"/>
                    <button name="action_open_dashboard" type="object" string="Tableau de bord"
                            class="btn-secondary" icon="fa-dashboard"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending,active"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_buses" type="object"
                                class="oe_stat_button" icon="fa-bus">
                            <field name="bus_count" widget="statinfo" string="Bus"/>
                        </button>
                        <button name="action_view_trips" type="object"
                                class="oe_stat_button" icon="fa-road">
                            <field name="trip_count" widget="statinfo" string="Voyages"/>
                        </button>
                        <button name="action_view_bookings" type="object"
                                class="oe_stat_button" icon="fa-ticket">
                            <field name="total_bookings" widget="statinfo" string="Réservations"/>
                        </button>
                    </div>
                    <field name="logo" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="code" readonly="1"/>
                        </h1>
                        <h2>
                            <field name="name" placeholder="Nom de la compagnie"/>
                        </h2>
                    </div>
                    <group>
                        <group string="Informations générales">
                            <field name="phone" widget="phone"/>
                            <field name="email" widget="email"/>
                            <field name="website" widget="url"/>
                            <field name="city_id"/>
                            <field name="partner_id"/>
                        </group>
                        <group string="Évaluation">
                            <field name="rating" widget="priority"/>
                            <field name="rating_count"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Configuration" name="config">
                            <group>
                                <group string="Réservations">
                                    <field name="reservation_duration_hours"/>
                                    <field name="reservation_fee"/>
                                    <field name="currency_id" invisible="1"/>
                                </group>
                                <group string="Paiement en ligne">
                                    <field name="allow_online_payment"/>
                                    <field name="wave_merchant_id" 
                                           invisible="not allow_online_payment"/>
                                    <field name="wave_api_key" password="True"
                                           invisible="not allow_online_payment"
                                           groups="transport_interurbain.group_transport_admin"/>
                                </group>
                            </group>
                        </page>
                        <page string="Responsables" name="managers">
                            <field name="manager_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Adresse" name="address">
                            <field name="address" placeholder="Adresse complète..."/>
                        </page>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Description de la compagnie..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Kanban -->
    <record id="transport_company_view_kanban" model="ir.ui.view">
        <field name="name">transport.company.view.kanban</field>
        <field name="model">transport.company</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="logo"/>
                <field name="phone"/>
                <field name="bus_count"/>
                <field name="active_trip_count"/>
                <field name="rating"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('transport.company', 'logo', record.id.raw_value)"
                                     alt="Logo" class="o_image_64_contain"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_tags_section">
                                    <span t-attf-class="badge #{record.state.raw_value == 'active' ? 'bg-success' : record.state.raw_value == 'pending' ? 'bg-info' : 'bg-danger'}">
                                        <field name="state"/>
                                    </span>
                                </div>
                                <ul class="list-unstyled mb-0">
                                    <li><i class="fa fa-bus me-1"/> <field name="bus_count"/> bus</li>
                                    <li><i class="fa fa-road me-1"/> <field name="active_trip_count"/> voyages actifs</li>
                                    <li><i class="fa fa-star me-1"/> <field name="rating"/>/5</li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Search -->
    <record id="transport_company_view_search" model="ir.ui.view">
        <field name="name">transport.company.view.search</field>
        <field name="model">transport.company</field>
        <field name="arch" type="xml">
            <search string="Rechercher une compagnie">
                <field name="name"/>
                <field name="code"/>
                <field name="phone"/>
                <field name="email"/>
                <filter string="Actives" name="active_companies" domain="[('state', '=', 'active')]"/>
                <filter string="En attente" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="Mes compagnies" name="my_companies" domain="[('manager_ids', 'in', uid)]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Ville" name="city" context="{'group_by': 'city_id'}"/>
                    <filter string="État" name="state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="transport_company_action" model="ir.actions.act_window">
        <field name="name">Compagnies</field>
        <field name="res_model">transport.company</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="transport_company_view_search"/>
        <field name="context">{'search_default_active_companies': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Ajouter une compagnie de transport
            </p>
            <p>
                Gérez les compagnies de transport et leurs configurations.
            </p>
        </field>
    </record>

    <!-- Action pour les responsables de compagnie -->
    <record id="transport_my_company_action" model="ir.actions.act_window">
        <field name="name">Ma compagnie</field>
        <field name="res_model">transport.company</field>
        <field name="view_mode">form</field>
        <field name="domain">[('manager_ids', 'in', uid)]</field>
        <field name="context">{'search_default_my_companies': 1}</field>
    </record>

</odoo>
