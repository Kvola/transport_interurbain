<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================ -->
    <!-- VUES POUR LES BUS -->
    <!-- ============================================ -->

    <!-- Vue Tree -->
    <record id="transport_bus_view_tree" model="ir.ui.view">
        <field name="name">transport.bus.view.tree</field>
        <field name="model">transport.bus</field>
        <field name="arch" type="xml">
            <tree string="Bus" decoration-muted="state in ['out_of_service']"
                  decoration-warning="state == 'maintenance'"
                  decoration-info="state == 'in_trip'">
                <field name="code"/>
                <field name="name"/>
                <field name="transport_company_id"/>
                <field name="bus_type"/>
                <field name="seat_capacity"/>
                <field name="has_ac" widget="boolean"/>
                <field name="has_wifi" widget="boolean"/>
                <field name="manage_luggage" widget="boolean"/>
                <field name="trip_count"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'available'"
                       decoration-info="state == 'in_trip'"
                       decoration-warning="state == 'maintenance'"
                       decoration-danger="state == 'out_of_service'"/>
            </tree>
        </field>
    </record>

    <!-- Vue Form -->
    <record id="transport_bus_view_form" model="ir.ui.view">
        <field name="name">transport.bus.view.form</field>
        <field name="model">transport.bus</field>
        <field name="arch" type="xml">
            <form string="Bus">
                <header>
                    <button name="action_set_available" type="object" string="Disponible"
                            class="btn-success" invisible="state == 'available'"/>
                    <button name="action_set_maintenance" type="object" string="Maintenance"
                            class="btn-warning" invisible="state == 'maintenance'"/>
                    <button name="regenerate_seats" type="object" string="Regénérer sièges"
                            class="btn-secondary" confirm="Êtes-vous sûr de vouloir regénérer les sièges ?"/>
                    <field name="state" widget="statusbar" statusbar_visible="available,in_trip,maintenance"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_trips" type="object"
                                class="oe_stat_button" icon="fa-road">
                            <field name="trip_count" widget="statinfo" string="Voyages"/>
                        </button>
                    </div>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="code" readonly="1"/>
                        </h1>
                        <h2>
                            <field name="name" placeholder="Nom ou immatriculation"/>
                        </h2>
                    </div>
                    <group>
                        <group string="Informations générales">
                            <field name="transport_company_id"/>
                            <field name="bus_type"/>
                            <field name="make"/>
                            <field name="model"/>
                            <field name="year"/>
                            <field name="license_plate"/>
                        </group>
                        <group string="Capacité passagers">
                            <field name="seat_capacity"/>
                            <field name="seat_layout"/>
                            <field name="has_vip_seats"/>
                            <field name="vip_seat_count" invisible="not has_vip_seats"/>
                            <field name="vip_seat_numbers" invisible="not has_vip_seats"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Bagages" name="luggage">
                            <group>
                                <group>
                                    <field name="manage_luggage"/>
                                </group>
                            </group>
                            <group invisible="not manage_luggage">
                                <group string="Capacité totale">
                                    <field name="luggage_capacity_kg"/>
                                    <field name="luggage_capacity_volume"/>
                                </group>
                                <group string="Franchise par passager">
                                    <field name="luggage_per_passenger_kg"/>
                                    <field name="luggage_per_passenger_volume"/>
                                    <field name="extra_luggage_price_kg"/>
                                    <field name="currency_id" invisible="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Équipements" name="amenities">
                            <group>
                                <group>
                                    <field name="has_ac"/>
                                    <field name="has_wifi"/>
                                    <field name="has_toilet"/>
                                </group>
                                <group>
                                    <field name="has_tv"/>
                                    <field name="has_usb"/>
                                    <field name="has_reclining_seats"/>
                                </group>
                            </group>
                        </page>
                        <page string="Sièges" name="seats">
                            <field name="seat_ids">
                                <tree editable="bottom">
                                    <field name="seat_number"/>
                                    <field name="seat_type"/>
                                    <field name="row"/>
                                    <field name="position"/>
                                    <field name="is_available"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Kanban -->
    <record id="transport_bus_view_kanban" model="ir.ui.view">
        <field name="name">transport.bus.view.kanban</field>
        <field name="model">transport.bus</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="image"/>
                <field name="transport_company_id"/>
                <field name="bus_type"/>
                <field name="seat_capacity"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('transport.bus', 'image', record.id.raw_value)"
                                     alt="Bus" class="o_image_64_contain"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_tags_section">
                                    <span t-attf-class="badge #{record.state.raw_value == 'available' ? 'bg-success' : record.state.raw_value == 'in_trip' ? 'bg-info' : record.state.raw_value == 'maintenance' ? 'bg-warning' : 'bg-danger'}">
                                        <field name="state"/>
                                    </span>
                                </div>
                                <div><field name="transport_company_id"/></div>
                                <ul class="list-unstyled mb-0">
                                    <li><i class="fa fa-users me-1"/> <field name="seat_capacity"/> places</li>
                                    <li><field name="bus_type"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Search -->
    <record id="transport_bus_view_search" model="ir.ui.view">
        <field name="name">transport.bus.view.search</field>
        <field name="model">transport.bus</field>
        <field name="arch" type="xml">
            <search string="Rechercher un bus">
                <field name="name"/>
                <field name="code"/>
                <field name="transport_company_id"/>
                <field name="license_plate"/>
                <filter string="Disponibles" name="available" domain="[('state', '=', 'available')]"/>
                <filter string="En voyage" name="in_trip" domain="[('state', '=', 'in_trip')]"/>
                <filter string="En maintenance" name="maintenance" domain="[('state', '=', 'maintenance')]"/>
                <separator/>
                <filter string="Avec climatisation" name="with_ac" domain="[('has_ac', '=', True)]"/>
                <filter string="Avec WiFi" name="with_wifi" domain="[('has_wifi', '=', True)]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Compagnie" name="company" context="{'group_by': 'transport_company_id'}"/>
                    <filter string="Type" name="type" context="{'group_by': 'bus_type'}"/>
                    <filter string="État" name="state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="transport_bus_action" model="ir.actions.act_window">
        <field name="name">Flotte de bus</field>
        <field name="res_model">transport.bus</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="transport_bus_view_search"/>
        <field name="context">{'search_default_available': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Ajouter un bus à la flotte
            </p>
            <p>
                Gérez la flotte de bus avec les capacités, équipements et sièges.
            </p>
        </field>
    </record>

</odoo>
