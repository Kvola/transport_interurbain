<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit the Settings Form View -->
    <record id="res_config_settings_view_form_transport" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.transport</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="60"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="Transport Interurbain" string="Transport Interurbain" 
                     name="transport_interurbain" groups="transport_interurbain.group_transport_admin">
                    <block title="Paramètres de réservation" name="transport_booking_settings">
                        <setting id="transport_booking_quota_setting" 
                                 title="Configurer le quota de réservation par défaut pour les voyages"
                                 string="Quota de réservation par défaut"
                                 help="Nombre maximum de réservations autorisées par voyage. 0 = pas de limite (capacité du bus).">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="transport_default_booking_quota" class="col-lg-3 o_light_label"/>
                                    <field name="transport_default_booking_quota" class="col-lg-2"/>
                                    <span class="text-muted"> places</span>
                                </div>
                                <div class="text-muted mt8">
                                    <i class="fa fa-info-circle"/> Si défini à 0, le quota sera égal à la capacité totale du bus.
                                </div>
                            </div>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>

    <!-- Action to open Transport Settings -->
    <record id="action_transport_config_settings" model="ir.actions.act_window">
        <field name="name">Paramètres Transport</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module': 'transport_interurbain', 'bin_size': False}</field>
    </record>
</odoo>
